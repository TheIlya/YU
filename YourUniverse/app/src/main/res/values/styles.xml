<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_floating_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_dark</item>
        <item name="android:windowBackground">@color/background_floating_material_light</item>
    </style>

    <style name="normal" parent="element">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dip</item>
        <item name="android:background">@color/colorMain</item>
        <item name="android:textColor">@color/colorBack</item>
    </style>

    <style name="strange" parent="element">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorBack</item>
        <item name="android:textColor">@color/colorMain</item>
    </style>

    <style name="element">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_margin">@dimen/universal_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>